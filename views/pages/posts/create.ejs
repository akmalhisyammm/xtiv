<%- include('../../partials/header', { title: 'Create Post' }) %>

<form action="/posts/create" method="post" class="flex flex-col gap-4 my-4">
  <div>
    <label for="title" class="block text-sm font-medium mb-2">Title</label>
    <input type="text" name="title" id="title" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
  </div>

  <div>
    <label for="content" class="block text-sm font-medium mb-2">Content</label>
    <textarea name="content" id="content" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" rows="5"></textarea>
  </div>

  <div>
    <label for="imgUrl" class="block text-sm font-medium mb-2">Image URL</label>
    <input type="text" name="imgUrl" id="imgUrl" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
  </div>

  <div>
    <label for="TagId" class="block text-sm font-medium mb-2">Tags</label>
    <select multiple name="TagId" id="TagId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
      <option value="" selected disabled>Choose tags</option>
      <% tags.forEach((tag) => { %>
      <option value="<%= tag.id %>"><%= tag.name %></option>
      <% }) %>
    </select>
  </div>

  <div class="flex gap-2">
    <button type="submit" class="py-3 px-4 w-full inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
      Create
    </button>
    <a href="/posts" type="button" class="py-3 px-4 w-full inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-500 text-white hover:bg-red-600 disabled:opacity-50 disabled:pointer-events-none">
      Cancel
    </a>
  </div>
</form>

<%- include('../../partials/footer') %>