<%- include('../../partials/header', { title: 'Login' }) %>

<h1>Create Post</h1>

<form action="/users/update/<%= profile.User.id %>" method="post">
  <input type="text" name="firstName" value="<%= profile.firstName %>" placeholder="FirstName">
  <input type="text" name="lastName" value="<%= profile.lastName %>" placeholder="LastName">
  <div>
    <input type="radio" name="gender" value="male" <%= profile.gender === 'male' && 'checked' %>>
    <label for="">Male</label>
  </div>
  <div>
    <input type="radio" name="gender" value="female" <%= profile.gender === 'female' && 'checked' %>>
    <label for="">Female</label>
  </div>
  <input type="date" name="dateOfBirth" value="<%= profile.dateOfBirth.toISOString().split('T')[0] %>" placeholder="DateOfBirth">
  <input type="text" name="phone" value="<%= profile.phone %>" placeholder="Phone">
  <input type="text" name="address" value="<%= profile.address %>" placeholder="Address">
  <button type="submit">Update</button>
</form>

<%- include('../../partials/footer') %>